@using JekirdekCRM.Helpers
@using JekirdekCRM.Models.DBModels
@{
    var user = SessionHelper.FindUser(Context);
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JekirdekCRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JekirdekCRM.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex layout-wrapper">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h4>Jekirdek CRM</h4>
            </div>
            <nav class="nav flex-column nav-items">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a>
                <div class="nav-divider"></div>

                @if (user?.Role == "Admin")
                {
                    <a class="nav-link" asp-controller="Customer" asp-action="AddCustomer">Add Customer</a>
                    <div class="nav-divider"></div>
                }

                <a class="nav-link" asp-controller="Customer" asp-action="ListCustomers">List Customers</a>
                <div class="nav-divider"></div>
                <a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a>
            </nav>

        </aside>

        <main class="main-content flex-grow-1 pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center p-3">
        &copy; 2025 - Jekirdek CRM
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
