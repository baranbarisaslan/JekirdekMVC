@using JekirdekCRM.Models.ViewModels
@model CustomerViewModel

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom-0">
            <h4 class="text-primary mb-0">Edit Customer</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditCustomer" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Region" class="form-label">Region</label>
                        <input asp-for="Region" class="form-control" />
                        <span asp-validation-for="Region" class="text-danger small"></span>
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
