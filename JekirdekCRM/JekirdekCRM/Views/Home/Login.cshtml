@model JekirdekCRM.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - Jekirdek CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <div class="login-wrapper d-flex align-items-center justify-content-center">
        <div class="login-card shadow">
            <div class="login-header text-center mb-4">
                <h2 class="text-primary">Welcome Back</h2>
                <p class="text-muted">Login to your Jekirdek CRM account</p>
            </div>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label text-muted">Username</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-primary"><i class="bi bi-person"></i></span>
                        <input asp-for="Username" class="form-control" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-muted">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-primary"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p class="mb-0" style="font-style:italic;">@error.ErrorMessage</p>
                        }
                    </div>
                }
            </form>
        </div>
    </div>
</body>
</html>
